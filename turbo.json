{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    ".prettierrc",
    "tsconfig.json",
    "apps/backend/pyproject.toml",
    "apps/backend/alembic.ini"
  ],
  "tasks": {
    "setup": {
      "dependsOn": ["^setup"],
      "cache": false,
      "outputs": []
    },
    "frontend#dev": {
      "dependsOn": ["^setup"],
      "cache": false,
      "persistent": true
    },
    "frontend#format": {
      "cache": false,
      "outputs": []
    },
    "dev": {
      "dependsOn": ["^setup"],
      "cache": false,
      "persistent": true
    },
    "format": {
      "cache": false,
      "outputs": []
    }
  }
}
